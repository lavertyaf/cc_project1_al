<h1>Inventory</h1>

<% @albums.each do |album| %>

<div class="inventory">
  <div class="album-image">
    <a href="/albums/<%= album.id %>"> <img src="/images/<%=album.id%>.jpg" alt="album cover" >
  </div>
  <div class="album-info">
    <ul>
      <li><%= album.artist_name%></li>
      <li><%= album.title %></li>
      <li><%= album.stock_level%> in stock</li></a>
    </ul>
  </div>
</div>
<% end %>

<div class="stock_info">
  <div class="albums_here">
    You have <%= @total_stock %> albums here
  </div>

  <div class="stock_value">
    Your total stock is worth Â£<%= @total_value %>
  </div>
</div>
